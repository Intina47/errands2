{
  "version": 2,
  "projectSettings": {
    "framework": "flask",
    "buildCommand": "python vercel_app/wsgi.py",
    "outputDirectory": null,
    "installCommand": "pip install -r requirements.txt",
    "devCommand": "flask run",
    "rootDirectory": null
  },
  "builds": [
    {
      "src": "vercel_app/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.8"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "vercel_app/wsgi.py"
    }
  ]
}

//TODO: comment this out for testing
{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.10"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "cache-control": "s-maxage=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "projectSettings": {
    "framework": "flask",
    "buildCommand": "mkdir -p vercel_app && cp -R *.py templates static vercel_app/",
    "outputDirectory": null,
    "installCommand": "pip install -r requirements.txt",
    "devCommand": "flask run --host=0.0.0.0",
    "rootDirectory": null
  }
}

